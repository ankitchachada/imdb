<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<div class="star-rating" data-score=<%= @movie.avg_rating %>><strong>Rating:</strong>
	<%= @movie.avg_rating %>
</div>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre_name %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>